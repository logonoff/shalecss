{
  "name": "@shalecss/react",
  "version": "0.0.0",
  "description": "a pseudo-skeuomorph React component library",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "api-extractor": "api-extractor run --local --verbose",
    "clean": "rm -rf dist",
    "build": "tsgo -p tsconfig.json && npm run api-extractor",
    "dev": "npm-watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/logonoff/shalecss.git"
  },
  "homepage": "https://logonoff.co/shalecss",
  "author": "logonoff",
  "license": "MIT",
  "dependencies": {
    "@shalecss/core": "*",
    "clsx": "^2.1.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "peerDependencies": {
    "react": "18.x | 19.x",
    "react-dom": "18.x | 19.x"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "^7.55.1",
    "@typescript/native-preview": "^7.0.0-dev.20251129.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "npm-watch": "0.13.0"
  },
  "watch": {
    "build": {
      "patterns": [
        "src/**/*.ts",
        "src/**/*.tsx"
      ],
      "extensions": "ts,tsx",
      "ignore": [
        "dist/**"
      ],
      "delay": 200
    }
  }
}
